{
    "routes": [
        {
            "route": "/admin/*",
            "allowedRoles": [
                "shirakawatest"
            ]
        },
        {
            "route": "/authenticated/*",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/login",
            "rewrite": "/.auth/login/aad"
        },
        {
            "route": "/.auth/login/twitter",
            "statusCode": 404
        },
        {
            "route": "/.auth/login/github",
            "statusCode": 404
        },
        {
            "route": "/logout",
            "rewrite": "/.auth/logout"
        }
    ],
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "/assets/*.{js,map}",
            "/assets/*.{png,jpg,gif}",
            "/assets/*"
        ]
    },
    "responseOverrides": {

        "401": {
          "statusCode": 302,
          "redirect": "/login"
        }

      }
}
